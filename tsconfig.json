{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ]
}

